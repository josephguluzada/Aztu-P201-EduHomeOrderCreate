@model NoticeBoard
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h2>NoticeBoard</h2>
        </div>
        <div class="col-lg-8 mx-auto">
            <form method="post" asp-action="edit">
                <div class="form-group">
                    <label asp-for="Date">DateTime</label>
                    <input type="text" class="form-control" asp-for="Date" id="Date" placeholder="Enter DateTime ">
                </div>
                <div class="form-group">
                    <label asp-for="Desc">Desc</label>
                    <input type="text" class="form-control" asp-for="Desc" id="Desc" placeholder="Enter Desc ">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
                <a class="btn btn-info" asp-controller="noticeboard" asp-action="index" >Back</a>
            </form>
        </div>
    </div>
</div>




